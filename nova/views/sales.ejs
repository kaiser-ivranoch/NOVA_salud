<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Registro de Ventas</title>
</head>
<body>
  <h1>Ventas - Bienvenido <%= user.email %></h1>
  <a href="/dashboard">Volver al Dashboard</a> |
  <a href="/auth/logout">Cerrar sesi√≥n</a>

  <h2>Registrar venta</h2>
  <form action="/sales/add" method="POST">
    <select name="producto" required>
      <option value="">Seleccionar producto</option>
      <% productos.forEach(p => { %>
        <option value="<%= p._id %>"><%= p.nombre %> - S/ <%= p.precio.toFixed(2) %> (Stock: <%= p.stock %>)</option>
      <% }) %>
    </select>
    <input type="number" name="cantidad" placeholder="Cantidad" required>
    <button type="submit">Registrar</button>
  </form>

  <h2>Historial de ventas</h2>
  <table border="1" cellpadding="5">
    <tr>
      <th>Producto</th>
      <th>Cantidad</th>
      <th>Total (S/)</th>
      <th>Fecha</th>
      <th>Vendedor</th>
    </tr>
    <% ventas.forEach(v => { %>
      <tr>
        <td><%= v.producto ? v.producto.nombre : 'Eliminado' %></td>
        <td><%= v.cantidad %></td>
        <td><%= v.total.toFixed(2) %></td>
        <td><%= new Date(v.fecha).toLocaleString() %></td>
        <td><%= v.vendedor %></td>
      </tr>
    <% }) %>
  </table>
</body>
</html>
